{
	"name": "@forewind/ui",
	"version": "0.0.0-development",
	"scripts": {
		"clean": "rimraf dist/",
		"dev": "vite dev --host",
		"build": "svelte-kit sync && svelte-package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write . '!**/*.tmp*'",
		"css": "npx tailwindcss -i ./src/app.css -o ./dist/output.css",
		"types": "tsc --emitDeclarationOnly",
		"docs": "rimraf docs/ && typedoc src/index.ts && touch ./docs/.nojekyll",
		"prepare": "husky install",
		"prepublishOnly": "npm run build && npm run docs",
		"semantic-release": "semantic-release --branches main",
		"lint:fix": "npm run lint -- --fix",
		"test": "playwright test"
	},
	"dependencies": {
		"@popperjs/core": "^2.11.6",
		"dot-prop": "^7.2.0",
		"highlight.js": "^11.6.0",
		"lodash.merge": "^4.6.2",
		"svelte-highlight": "^6.2.1",
		"tailwind-merge": "^1.6.0"
	},
	"peerDependencies": {
		"autoprefixer": "^10.4.8",
		"postcss": "^8.4.16",
		"svelte": "^3.44.0",
		"svelte-preprocess": "^4.10.6",
		"tailwindcss": "^3.1.8"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@playwright/test": "^1.25.0",
		"@semantic-release/changelog": "^6.0.1",
		"@semantic-release/commit-analyzer": "^9.0.2",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/npm": "^9.0.1",
		"@semantic-release/release-notes-generator": "^10.0.3",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"@sveltejs/package": "next",
		"@tailwindcss/aspect-ratio": "^0.4.0",
		"@tailwindcss/forms": "^0.5.1",
		"@tailwindcss/typography": "^0.5.2",
		"@types/lodash.merge": "^4.6.7",
		"@types/node": "^18.8.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"autoprefixer": "^10.4.8",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.1",
		"postcss": "^8.4.16",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"pretty-quick": "^3.1.3",
		"rimraf": "^3.0.2",
		"semantic-release": "^19.0.3",
		"svelte": "^3.52.0",
		"svelte-check": "^2.9.2",
		"svelte-preprocess": "^4.10.7",
		"tailwindcss": "^3.1.8",
		"tslib": "^2.3.1",
		"typedoc": "^0.23.5",
		"typescript": "^4.8.4",
		"vite": "^3.1.0",
		"vite-plugin-svelte-svgr": "^1.0.4"
	},
	"type": "module",
	"publishConfig": {
		"registry": "https://registry.npmjs.org",
		"tag": "latest"
	},
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"type": "docs",
							"scope": "README*",
							"release": "patch"
						}
					]
				}
			],
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/npm",
				{
					"npmPublish": true
				}
			],
			"@semantic-release/changelog",
			"@semantic-release/git"
		]
	},
	"jest": {
		"transform": {
			"^.+\\.svelte$": [
				"svelte-jester",
				{
					"preprocess": true
				}
			],
			"^.+\\.ts$": "ts-jest"
		},
		"moduleFileExtensions": [
			"js",
			"ts",
			"svelte"
		],
		"testEnvironment": "jsdom",
		"setupFilesAfterEnv": [
			"@testing-library/jest-dom/extend-expect"
		]
	}
}
