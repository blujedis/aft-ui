{
	"name": "@aft/ui",
	"version": "0.0.0-development",
	"description": "Components for Svelte using Taildwindcss library.",
	"license": "MIT",
	"main": "./dist/index.js",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"keywords": [
		"aft",
		"tailwind",
		"tailwindcss",
		"svelte",
		"components"
	],
	"scripts": {
		"clean": "rimraf dist/",
		"dev": "vite dev --host",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"lint:fix": "prettier --plugin-search-dir . --write .",
		"prepare": "husky install",
		"prepublishOnly": "npm run package",
		"types": "tsc --emitDeclarationOnly",
		"docs": "rimraf docs/ && typedoc && touch ./docs/.nojekyll",
		"semantic-release": "semantic-release --branches main",
		"test": "playwright test",
		"coverage": "vitest run --coverage",
		"package": "svelte-kit sync && svelte-package && npm run postbuild",
		"package:watch": "svelte-kit sync && svelte-package --watch",
		"preview": "vite preview",
		"build": "npm run lint:fix && vite build && npm run postbuild",
		"build:package": "npm run build && npm run package",
		"postbuild": "node postbuild.cjs"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.6.3",
		"classnames": "^2.5.1",
		"defaults": "^3.0.0",
		"dot-prop": "^8.0.2",
		"fuse.js": "^7.0.0",
		"md5": "^2.3.0",
		"p-queue": "^8.0.1",
		"tailwind-merge": "^2.2.0",
		"tinycolor2": "^1.6.0"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.5.7",
		"autoprefixer": "^10.4.19",
		"postcss": "^8.4.38",
		"svelte": "^4.2.16",
		"tailwindcss": "^3.4.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.4.4",
		"@commitlint/config-conventional": "^18.4.4",
		"@fontsource/fira-mono": "^4.5.10",
		"@iconify/svelte": "^3.1.6",
		"@neoconfetti/svelte": "^1.0.0",
		"@playwright/test": "^1.28.1",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^11.1.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/npm": "^11.0.2",
		"@semantic-release/release-notes-generator": "^12.1.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit":  "^2.5.7",
		"@sveltejs/package": "^2.3.1",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@tailwindcss/forms": "^0.5.7",
		"@types/eslint": "8.56.0",
		"@types/md5": "^2.3.5",
		"@types/node": "^20.11.25",
		"@types/tinycolor2": "^1.4.6",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vitest/coverage-istanbul": "^1.2.2",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"fast-glob": "^3.3.2",
		"husky": "^8.0.3",
		"postcss": "^8.4.33",
		"postcss-import": "^16.0.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"pretty-quick": "^3.1.3",
		"publint": "^0.2.7",
		"rimraf": "^5.0.5",
		"semantic-release": "^23.0.0",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.4.1",
		"ts-node": "^10.9.2",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vitest": "^1.0.0"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org",
		"tag": "latest"
	},
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"type": "docs",
							"scope": "README*",
							"release": "patch"
						}
					]
				}
			],
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/npm",
				{
					"npmPublish": true
				}
			],
			"@semantic-release/changelog",
			"@semantic-release/git"
		]
	},
	"jest": {
		"transform": {
			"^.+\\.svelte$": [
				"svelte-jester",
				{
					"preprocess": true
				}
			],
			"^.+\\.ts$": "ts-jest"
		},
		"moduleFileExtensions": [
			"js",
			"ts",
			"svelte"
		],
		"testEnvironment": "jsdom",
		"setupFilesAfterEnv": [
			"@testing-library/jest-dom/extend-expect"
		]
	}
}