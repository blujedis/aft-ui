{
	"name": "@sveleton/ui",
	"version": "0.0.0-development",
	"description": "Components for Svelte using Taildwindcss library.",
	"license": "MIT",
	"main": "./dist/index.js",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"keywords": [
		"sveleton",
		"tailwind",
		"tailwindcss",
		"svelte",
		"components"
	],
	"scripts": {
		"clean": "rimraf dist/",
		"dev": "vite dev --host",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"lint:fix": "prettier --plugin-search-dir . --write .",
		"prepare": "husky install",
		"prepublishOnly": "npm run package",
		"types": "tsc --emitDeclarationOnly",
		"docs": "rimraf docs/ && typedoc && touch ./docs/.nojekyll",
		"semantic-release": "semantic-release --branches main",
		"test": "playwright test",
		"package": "svelte-kit sync && svelte-package",
		"preview": "vite preview",
		"build": "npm run lint:fix && vite build && npm run package",
		"build:only": "vite build && npm run package"
	},
	"dependencies": {
		"@popperjs/core": "^2.11.8",
		"classnames": "^2.3.2",
		"dot-prop": "^8.0.2",
		"md5": "^2.3.0",
		"p-queue": "^7.3.4",
		"tailwind-merge": "^1.14.0"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^1.22.4",
		"autoprefixer": "^10.4.14",
		"postcss": "^8.4.27",
		"svelte": "^4.1.2",
		"tailwindcss": "^3.3.3"
	},
	"devDependencies": {
		"tinycolor2": "^1.6.0",
		"@sveltejs/package": "^2.2.0",
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@iconify/svelte": "^3.1.4",
		"@iconify/types": "^2.0.0",
		"@playwright/test": "^1.28.1",
		"@semantic-release/changelog": "^6.0.1",
		"@semantic-release/commit-analyzer": "^9.0.2",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/npm": "^9.0.1",
		"@semantic-release/release-notes-generator": "^10.0.3",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "latest",
		"@tailwindcss/forms": "^0.5.3",
		"@types/md5": "^2.3.2",
		"@types/node": "^18.8.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"husky": "^8.0.1",
		"postcss": "^8.4.21",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"pretty-quick": "^3.1.3",
		"publint": "^0.1.9",
		"rimraf": "^3.0.2",
		"semantic-release": "^19.0.5",
		"svelte": "latest",
		"svelte-check": "^3.4.6",
		"tailwindcss": "^3.3.3",
		"ts-node": "^10.9.1",
		"tslib": "^2.6.1",
		"typescript": "^5.1.6",
		"vite": "^4.4.7",
		"vitest": "^0.33.0"
	},
	"temp": {
		"highlight.js": "^11.8.0",
		"svelte-highlight": "^7.2.1"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org",
		"tag": "latest"
	},
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"type": "docs",
							"scope": "README*",
							"release": "patch"
						}
					]
				}
			],
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/npm",
				{
					"npmPublish": true
				}
			],
			"@semantic-release/changelog",
			"@semantic-release/git"
		]
	},
	"jest": {
		"transform": {
			"^.+\\.svelte$": [
				"svelte-jester",
				{
					"preprocess": true
				}
			],
			"^.+\\.ts$": "ts-jest"
		},
		"moduleFileExtensions": [
			"js",
			"ts",
			"svelte"
		],
		"testEnvironment": "jsdom",
		"setupFilesAfterEnv": [
			"@testing-library/jest-dom/extend-expect"
		]
	}
}